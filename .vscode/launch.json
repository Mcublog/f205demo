{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: DESKTOP",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build active target"
        },
        {
            "type": "cortex-debug",
            "request": "launch",
            "name": "Debug: MCU",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "servertype": "jlink",
            "device": "STM32F205RG",
            "interface": "swd",
            "serialNumber": "", //If you have more than one J-Link probe, add the serial number here.
            "runToEntryPoint": "main",
            "svdFile": "${workspaceRoot}/scripts/STM32F20x.svd",
            "breakAfterReset": true,
            "serverArgs": [
                "-gui"
            ],
            "preLaunchTask": "CMake: build active target",
            // "showDevDebugOutput":"raw"
            // "preRestartCommands": [
            //     "file ./build/bootloader/f205_boot",
            //     "load",
            //     "add-symbol-file ./build/pirit_2f/f205_fw 0x08004004",
            //     "enable breakpoint",
            //     "monitor reset"
            //   ]
        },
        {
            "name": "Debug (OpenOCD)",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "interface": "swd",
            "device": "STM32F205RG",
            "runToEntryPoint": "main",
            "svdFile": "${workspaceRoot}/resources/STM32F20x.svd",
            "configFiles": [
                "interface/wch-cmsis-dap.cfg",
                "target/stm32f2x.cfg",
                // "debug/rtt.cfg"
            ],
            "preLaunchCommands": [
                "set mem inaccessible-by-default off",
                "monitor reset"
            ],
            "postLaunchCommands": [
                "monitor reset init",
                "monitor sleep 100",
            ],
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "clearSearch": false,
                "polling_interval": 20,
                "rtt_start_retry": 20000,
                "decoders": [
                    {
                        "label": "RTT channel 0",
                        "port": 0,
                        "timestamp": true,
                        "type": "console"
                    }
                ]
            }
        }
    ]
}